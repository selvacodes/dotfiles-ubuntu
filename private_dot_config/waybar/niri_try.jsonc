  "custom/active-workspace": {
    "exec": "$HOME/repos/learn/niri-utils/niri-socket.ts",
    "format": "{}",
    "interval": 0,
    "return-type": "json",
  },
  "custom/niri-workspaces": {
    "exec": "$HOME/repos/learn/niri-utils/niri-workspaces.ts",
    "interval": 1,
    "format": "{}",
    "return-type": "json",
  },
  "custom/niri-window": {
