  "modules-left": ["clock", "disk", "memory", "cpu", "temperature","custom/niri-workspaces" ],
  "modules-center": ["custom/active-workspace","custom/niri-window"],
  "modules-right": [
    "tray",
    "backlight",
    "idle_inhibitor",
    "bluetooth",
    "pulseaudio",
    "network",
    "battery",
